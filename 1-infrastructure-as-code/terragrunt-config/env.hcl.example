# ---------------------------------------------------------------------------------------------------------------------
# ENVIRONMENT LEVEL VARIABLES
# These variables apply to all resources in this environment (dev/staging/prod)
# Copy this file to env.hcl and customize for your environment
# ---------------------------------------------------------------------------------------------------------------------

locals {
  # Environment identification
  environment = "dev"  # Options: dev, staging, prod
  
  # Environment-specific sizing
  instance_sizes = {
    web_tier = "t3.small"     # Web application instances
    app_tier = "t3.medium"    # Application tier instances
    db_tier  = "t3.small"     # Database instances (for dev/staging)
  }
  
  # Environment-specific settings
  enable_deletion_protection = false  # Set to true for production
  backup_retention_days      = 7      # Increase for production
  multi_az                   = false  # Set to true for production
  
  # Auto-scaling settings
  min_capacity = 1
  max_capacity = 3
  desired_capacity = 1
  
  # Monitoring settings
  enable_detailed_monitoring = false  # Set to true for production
  log_retention_days         = 7      # Increase for production
  
  # Security settings
  enable_waf                = false   # Set to true for production
  ssl_policy               = "ELBSecurityPolicy-TLS-1-2-2017-01"
  
  # Environment-specific tags
  environment_tags = {
    Environment = local.environment
    AutoShutdown = local.environment == "dev" ? "true" : "false"
  }
} 